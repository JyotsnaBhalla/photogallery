<h2>All Albums</h2>
		<table>
		<tr>
			<td><strong>Title</strong></td>
			<td><strong>Album Cover Picture</strong></td>
		</tr> 
		  <% @album.each do |a| %>
		    <tr>
		  	  <td><%= a.title %></td>
			    <td><%= image_tag a.album_cover.url %></td>
			    <td><%= link_to 'Show', album_path(a) %></td>
			    <% if current_user.id == a.user_id %>
				    <td> | <%= link_to 'Edit', edit_album_path(a) %> |</td>
		        <td><%= link_to 'Delete', album_path(a), method: :delete, data:{confirm: 'Are you Sure?'} %></td>
	        <% end %>
		    </tr> 
		  <% end %>
		</table>